<p id="notice"><%= notice %></p>

<p>
  <strong>Date:</strong>
  <%= @event.date %>
</p>

<p>
  <strong>Time:</strong>
  <%= @event.time %>
</p>

<p>
  <strong>Location:</strong>
  <a href= <%= "#{@event.location}" %> > <%= @event.location %> </a>
</p>

<p>
  <strong>Signed Up:</strong>
  <%= @signups.count + 1 %>
</p>


<% names = [] %>

<strong> Already signed up: <br> </strong>

<% if current_user.id == @event.user_id %>
	<% if @signups.empty? %>
		Nobody :(
		<br><br>
	<% else %>

		<% @names.each do |loop| %>
		<% u = User.find(loop) %>
		<%= u.name %>
			<% if current_user == u %>
			<%= link_to "Undo Signup", event_signup_url(@event) , class: "btn btn-sm btn-success", method: :delete, data: { confirm: 'Awww no, really??' } %> 
			<% else %>
			<p>
			<% end %>
		<% end %>
	<% end %>
<% else %>
	Only the event organiser can see participant names!
<% end %>

<br>
<br>

<% if current_user.id == @event.user_id %>
	<%= link_to 'Edit', edit_event_path(@event) %> 
<% else %>

<% end %>
<br>


<!-- <%= link_to 'Back', events_path %> -->

<% if @names.include? current_user.id %>
<% else %>
<%= link_to 'Join This Run', new_event_signup_url(@event), class: "btn btn-lg btn-primary" %>
<% end %>



