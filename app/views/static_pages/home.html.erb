






<h1>Upcoming Group Runs</h1>


<% if logged_in? %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Distance</th>
      <th>Pace</th>
      <th>Date</th>
      <th>Time</th>
      <th>Meetup Area</th>
      <th>Signups</th>

      <th colspan="8"></th>
    </tr>
  </thead>


 
    <% @event_order.each do |event| %>
    <% if event.date >= Date.today.to_s %>

      <% date = event.date %>
      <% d = date.split('-') %>
      <% ruby_date = Time.new(d[0],d[1],d[2]) %>
      <% day_date = ruby_date.strftime("%A %B %d, %Y") %>

    <tr>
    <td><%= event.title %></td>
    <td><%= event.distance %></td>
    <td><%= event.pace %></td>
        <td><%= day_date %></td>
        <td><%= event.time %></td>
        <td><%= event.location %> </a></td>
      


        <td><%= event.signups.count + 1 %></td>

        <td><%= link_to 'View Run', event, class: "btn btn-sm btn-success" %></td>


      </tr>

      <% else %>

      <% end %>
    <% end %>
  </tbody>
</table>

<% else %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Distance</th>
      <th>Pace</th>
      <th>Date</th>
      <th>Time</th>
      <th>Meetup Area</th>
      <th>Signups</th>

      <th colspan="8"></th>
    </tr>
  </thead>
 
    <% @event_order.each do |event| %>

    <% if event.date >= Date.today.to_s %>

      <% date = event.date %>
      <% d = date.split('-') %>
      <% ruby_date = Time.new(d[0],d[1],d[2]) %>
      <% day_date = ruby_date.strftime("%A %B %d, %Y") %>

    <tr>
    <td><%= event.title %></td>
    <td><%= event.distance %></td>
    <td><%= event.pace %></td>
        <td><%= day_date %></td>
        <td><%= event.time %></td>
        <td><%= event.location %> </a></td>
      
        <td><%= event.signups.count + 1 %></td>

        <td><%= link_to 'View Run', signup_path, class: "btn btn-sm btn-success" %></td><br>

      </tr>

      <% else %>
  <% end %>


<% end %>

  </tbody>
</table>

<% end %>
