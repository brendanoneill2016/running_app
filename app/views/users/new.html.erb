<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages' %>


      <%= f.label :first_name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :surname %>
      <%= f.text_field :surname, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.label :pin %>
      <%= f.text_field :pin, class: 'form-control' %>
<br>
      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
<br>
Note: you'll receive an email to activate your account. It can take up to 5 minutes to arrive.
<br>

    <br><br>
    <p><strong>Already have an account?? <%= link_to "Click here to login", login_path %></strong></p>


  </div>


 

</div>




